<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@(!string.IsNullOrWhiteSpace(ViewData["Title"] as string) ? $"{ViewData["Title"]} - GuiStack" : "GuiStack")</title>
        @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
        <link rel="stylesheet" href="~/css/site.css" />
    </head>
    <body>
        <div class="gs-main-container">
            <header>
                <h1 style="text-align: center">GuiStack</h1>
            </header>

            <nav class="gs-navbar">
                <a class="selected">Dashboard</a>
                <a>S3</a>
                <a>SQS</a>
            </nav>

            <main>
                @RenderBody()
            </main>
        </div>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/build/site.bundle.js" asp-append-version="true"></script>

        @RenderSection("Scripts", required: false)
    </body>
</html>